<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/ivImage_fordialog"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/ivfirstpick"
        android:src="@drawable/one"
        android:layout_width="20dp"
        android:layout_height="20dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="80dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/ivsecondpick"
        android:src="@drawable/two"
        android:layout_width="20dp"
        android:layout_height="20dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="80dp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/ivImage_fordialog"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/ivLikeimage_fordialog"
            android:layout_marginTop="5dp"
            android:layout_weight="0.1"
            android:src="@drawable/likes"
            android:layout_width="10dp"
            android:layout_height="15dp" />

        <TextView
            android:id="@+id/ivLikes_fordialog"
            android:layout_marginTop="5dp"
            android:layout_weight="0.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="555"
            android:textSize="12dp"/>

        <ImageView
            android:id="@+id/ivCommentimage_fordialog"
            android:layout_marginTop="6dp"
            android:layout_weight="0.1"
            android:src="@drawable/comments"
            android:layout_width="10dp"
            android:layout_height="13dp" />

        <TextView
            android:id="@+id/ivComments_fordialog"
            android:layout_marginTop="5dp"
            android:layout_weight="0.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="555"
            android:textSize="12dp"/>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
