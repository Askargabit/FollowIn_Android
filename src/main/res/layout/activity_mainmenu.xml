<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:name="followininc.followin.Menu.Menu_1_Fragment"
        android:id="@+id/Menu_1_Fragment"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />

    <fragment
        android:name="followininc.followin.Menu.Menu_2_Fragment"
        android:id="@+id/Menu_2_Fragment"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />

    <fragment
        android:name="followininc.followin.Menu.Menu_3_Fragment"
        android:id="@+id/Menu_3_Fragment"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        android:visibility="gone"
        app:menu="@menu/navigation" />

</RelativeLayout>
